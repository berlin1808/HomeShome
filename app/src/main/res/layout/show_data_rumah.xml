<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:id="@+id/cardHardware"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:id="@+id/relLa">
                <ImageView
                    android:id="@+id/imageRumah"
                    android:padding="1dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_toRightOf="@id/relLa">

                <TextView
                    android:id="@+id/txtjbayar"
                    android:layout_width="185dp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_height="20dp"
                    android:paddingLeft="1dp"
                    android:text="Pembayaran : ?"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/txtjbayar">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_star_border_24"/>

                    <TextView
                        android:id="@+id/txtjrumah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-thin"
                        android:textStyle="bold"
                        android:text="Baru"
                        android:textColor="#F44336"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtalamat"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/txtjbayar"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:paddingLeft="1dp"
                    android:textStyle="bold"
                    android:text="Jl Linggarjati"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtharga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/txtalamat"
                    android:fontFamily="sans-serif-thin"
                    android:paddingLeft="1dp"
                    android:text="Rp. 12M"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_below="@id/txtharga"
                    android:paddingLeft="1dp"
                    android:paddingRight="15dp"
                    android:text="Keterangan"
                    android:textStyle="bold"
                    android:textColor="#5E5D5D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtltanah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtket"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:paddingLeft="1dp"
                    android:paddingRight="15dp"
                    android:text="LT : "
                    android:textStyle="bold"
                    android:textColor="#5E5D5D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtlbangunan"
                    android:layout_width="120dp"
                    android:layout_height="21dp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_below="@id/txtltanah"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="15dp"
                    android:text="LB : "
                    android:textStyle="bold"
                    android:textColor="#5E5D5D"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/txtlbangunan"
                    android:layout_below="@id/txtltanah"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ln1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icons8_empty_bed_50"/>

                        <TextView
                            android:id="@+id/txtbkamar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-thin"
                            android:textStyle="bold"
                            android:text="2"
                            android:textColor="#5E5D5D"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:id="@+id/ln2"
                        android:layout_toRightOf="@id/ln1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mandi"/>

                        <TextView
                            android:id="@+id/txtbkmandi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-thin"
                            android:textStyle="bold"
                            android:text="1"
                            android:textColor="#5E5D5D"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_toRightOf="@id/ln2"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mobil"/>

                        <TextView
                            android:id="@+id/txtbgarasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="sans-serif-thin"
                            android:textStyle="bold"
                            android:text="1"
                            android:textColor="#5E5D5D"
                            android:textSize="16sp" />

                    </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
